pipeline {
    agent any
    environment {
        credentials              = credentials('docker-hub-credentials')
        dockerhub_username       = "$credentials_USR"
        dockerhub_password       = "$credentials_PSW"
    }
    stages {
        stage("test") {
            agent {
                docker {
                    image 'python:3'
                }
            }
            steps {
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh "pip install -r source/requirements.txt --user"
                    sh 'python -m pytest'
                }                
            }
        }

        stage("Build Dockerfile") {
            steps {
                
                sh "docker build -t -f Dockerfile-with-python-image $dockerhub_username/flask:$BUILD_NUMBER ."
            }
        }

        stage("Publish Dockerfile") {
            steps {
                sh "docker login -u $dockerhub_username -p $dockerhub_password"
                sh "docker push $dockerhub_username/flask:$BUILD_NUMBER"
            }
        }

    }

}